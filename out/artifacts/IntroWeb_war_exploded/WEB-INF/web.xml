<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
    <display-name>TestTomcat</display-name>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>servlet.user.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>servlet.user.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Create</servlet-name>
        <servlet-class>servlet.user.Create</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddFriend</servlet-name>
        <servlet-class>servlet.friend.AddFriend</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RemoveFriend</servlet-name>
        <servlet-class>servlet.friend.RemoveFriend</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListFriends</servlet-name>
        <servlet-class>servlet.friend.ListFriend</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddMessage</servlet-name>
        <servlet-class>servlet.message.AddMessage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListUserMessages</servlet-name>
        <servlet-class>servlet.message.ListUserMessages</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListFriendMessages</servlet-name>
        <servlet-class>servlet.message.ListFriendMessages</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchFriend</servlet-name>
        <servlet-class>servlet.friend.SearchFriend</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddComment</servlet-name>
        <servlet-class>servlet.message.AddComment</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetMessages</servlet-name>
        <servlet-class>servlet.message.GetMessages</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Create</servlet-name>
        <url-pattern>/create</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddFriend</servlet-name>
        <url-pattern>/addfriend</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RemoveFriend</servlet-name>
        <url-pattern>/remove</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListFriends</servlet-name>
        <url-pattern>/friends</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddMessage</servlet-name>
        <url-pattern>/addmessage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListUserMessages</servlet-name>
        <url-pattern>/list_messages</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListFriendMessages</servlet-name>
        <url-pattern>/friendmessages</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchFriend</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddComment</servlet-name>
        <url-pattern>/addcomment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetMessages</servlet-name>
        <url-pattern>/messages</url-pattern>
    </servlet-mapping>
</web-app>